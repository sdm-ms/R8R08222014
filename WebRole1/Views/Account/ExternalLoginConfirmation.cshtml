@model WebRole1.Models.ExternalLoginConfirmationViewModel
@{
    ViewBag.Title = "Register";
}

@*<h2>@ViewBag.Title.</h2>
<h3>Associate your @ViewBag.LoginProvider account.</h3>*@

<div class="headTxt headTxtEffect">
    @ViewBag.Title
</div>
<div class="afterHeadTxtEffect">
    @using (Html.BeginForm("ExternalLoginConfirmation", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post))
    {
       @Html.AntiForgeryToken()

          @*   <h4>Association Form</h4>
            <hr />*@
    <span style="color:red;">
        @Html.ValidationSummary(true)
    </span>
        <p class="text-info">
            You've successfully authenticated with <strong>@ViewBag.LoginProvider</strong>.
            Please enter a user name for this site below and click the Register button to finish
            logging in.
        </p>
        
        <table class="mainPresentationText">
            <tr style="height: 50px;">
                <td>
                    <label class="mainPresentationText">
                        Username:
                    </label>
                </td>
                <td>
                    @Html.TextBoxFor(m => m.UserName, new { @class = "createUserInput" })
                    @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "createUserError" })
                </td>
            </tr>
            <tr><td colspan="2">&nbsp;</td></tr>
            <tr><td colspan="2"><input type="submit" value="Register" class="BtnBig" /></td></tr>
        </table>
        
        @*<div class="form-group">
            @Html.LabelFor(m => m.UserName, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.UserName)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-default" value="Register" />
            </div>
        </div>*@
    }
    </div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
