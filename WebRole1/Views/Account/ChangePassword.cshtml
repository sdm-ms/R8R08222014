@model WebRole1.Models.ChangePasswordViewModel
@{
    ViewBag.Title = "ChangePassword";
}
<div class="headTxt headTxtEffect">
    Change Password
</div>
<div class="afterHeadTxtEffect">
    @using (Html.BeginForm("ChangePassword", "Account", FormMethod.Post))
{
    if (ViewBag.ChangePassword != "")
       {
        <div class="form-group" style="color:green;font-weight:bold;">
            @ViewBag.ChangePassword
        </div>
       }

    <table class="mainPresentationText">
        <tr style="height: 50px;">
            <td>
                <label class="mainPresentationText">
                    New Password:
                </label>
            </td>
            <td>
                @Html.PasswordFor(m => m.NewPassword, new { @class = "createUserInput" })
                @Html.ValidationMessageFor(m => m.NewPassword, "", new { @class = "createUserError" })
            </td>
        </tr>
        <tr style="height: 50px;">
            <td>
                <label class="mainPresentationText">
                    Confirm Password:
                </label>
            </td>
            <td>
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "createUserInput" })
                @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "createUserError" })
            </td>
        </tr>
        <tr><td colspan="2">&nbsp;</td></tr>
        <tr><td colspan="2"><input type="submit" value="Change Password" class="BtnBig" /></td></tr>
    </table>
    }
    </div>
        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }




